{
	"hosting": {
		"public": "build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		],
		"headers": [
			{
				"source": "**/*.@(js|css)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=31536000, immutable"
					}
				]
			},
			{
				"source": "**/*.@(png|jpg|jpeg|gif|svg|webp|mp3|ogg|wav|json)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=86400"
					}
				]
			}
		]
	}
}
